{
    "name": "test-authentication",
    "version": "1.0.0",
    "scripts": {
        "test": "npm run clean && npm run build && npm run _start",
        "test:tests": "npm run clean && npm run build && npm run _start -- --serve",
        "test:watch": "node ./dist/test/authentication/commands/test-runner.js --watch",
        "test:coverage": "node ./dist/test/authentication/commands/test-runner.js --coverage",
        "clean": "node -e \"require('fs').rmSync('./dist', {recursive: true, force: true})\"",
        "build": "npx tsc --outDir ./dist",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "killer-start": "(npm run check-need-cleanup || npm run cleanup) && npm run _start",
        "check-need-cleanup": "cross-env TEST_CONFIG=./dist/test/authentication/config/local.config.js node ./dist/test/authentication/commands/check-port.js",
        "cleanup": "cross-env TEST_CONFIG=./dist/test/authentication/config/local.config.js node ./dist/test/authentication/commands/cleanup.js",
        "_start": "cross-env TEST_CONFIG=./dist/test/authentication/config/local.config.js node ./dist/test/authentication/commands/test-runner.js"
    },
    "author": "",
    "license": "UNLICENSED",
    "description": "",
    "dependencies": {
        "child_process": "^1.0.2",
        "concurrently": "^9.1.2",
        "tsyringe": "^4.10.0",
        "vitest": "^3.1.2",
        "wait-on": "^8.0.3"
    },
    "devDependencies": {
        "@types/node": "^22.15.18",
        "@types/wait-on": "^5.3.4",
        "axios": "^1.9.0",
        "cross-env": "^7.0.3",
        "detect-port-alt": "^1.1.6",
        "kill-port": "^2.0.1",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
    }
}
